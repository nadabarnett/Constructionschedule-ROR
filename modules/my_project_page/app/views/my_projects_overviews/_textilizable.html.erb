<h3 class="widget-box--header" ng-hide="$ctrl.formVisible">
  <span class="widget-box--header-title"><%= block_title || l(:label_custom_element) %></span>
</h3>

<% if defined? block_name %>
  <%= content_for block_name %>
<% end %>

<div class="textile-body" ng-hide="$ctrl.formVisible">
<% if defined? block_name %>
  <div id="<%= block_name %>-text" class="wiki">
    <%= format_text(textile, :object => overview) %>
  </div>
<% else %>
  <%= format_text(textile, :object => overview) %>
<% end %>
</div>